<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/highlight_card_preference_background"
    android:padding="12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/top_level_preference_text_color_primary"
            android:textSize="20sp" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:textColor="@color/top_level_preference_text_color_secondary"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_frame"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical">

        <com.android.settings.utils.ColoredPreferenceImageView
            android:id="@android:id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="@dimen/top_level_icon_padding"
            android:background="@drawable/custom_surface_color_rounded"
            android:tint="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>

