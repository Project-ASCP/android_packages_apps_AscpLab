<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/themes_highlights"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/boot_styles_tile"
            android:layout_width="0dp"
            android:layout_height="@dimen/highlight_card_height"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_preference_background_oos"
            android:clickable="true"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:clipToOutline="true">
                <com.android.settings.utils.DynamicIconPreferenceView
                    android:tint="?android:attr/colorAccent"
                    android:id="@+id/boot_styles_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_movie"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="@dimen/highlight_title_size"
                    android:textColor="@color/top_level_preference_text_color_primary"
                    android:id="@+id/boot_styles_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/boot_animation_styles_title"
                    android:layout_below="@+id/boot_styles_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    style="@style/op_control_text_style_h6" />
                <TextView
                    android:textSize="11.5sp"
                    android:textColor="@color/top_level_preference_text_color_secondary"
                    android:id="@+id/boot_styles_summary"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/highlight_summary_width"
                    android:layout_height="wrap_content"
                    android:text="@string/boot_animation_styles_summary"
                    android:layout_below="@+id/boot_styles_title"
                    android:layout_marginStart="20dp"
                    style="@style/op_control_text_style_h6" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/icon_pack_tile"
                android:layout_width="0dp"
                android:layout_height="@dimen/highlight_card_height"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_preference_background_oos"
                android:clickable="true"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:clipToOutline="true">
                    <com.android.settings.utils.DynamicIconPreferenceView
                        android:tint="?android:attr/colorAccent"
                        android:id="@+id/icon_pack_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_drawing"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:textSize="@dimen/highlight_title_size"
                        android:textColor="@color/top_level_preference_text_color_primary"
                        android:id="@+id/icon_pack_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_customization_icon_pack_title"
                        android:layout_below="@+id/icon_pack_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        style="@style/op_control_text_style_h6" />
                    <TextView
                        android:textSize="11.5sp"
                        android:textColor="@color/top_level_preference_text_color_secondary"
                        android:id="@+id/icon_pack_summary"
                        android:layout_marginTop="2dp"
                        android:layout_width="@dimen/highlight_summary_width"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_customization_icon_pack_summary"
                        android:layout_below="@+id/icon_pack_title"
                        android:layout_marginStart="20dp"
                        style="@style/op_control_text_style_h6" />
                </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/themes_highlights2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/settings_tile"
            android:layout_width="0dp"
            android:layout_height="@dimen/highlight_card_height"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_preference_background_oos"
            android:clickable="true"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:clipToOutline="true">
                <com.android.settings.utils.DynamicIconPreferenceView
                    android:tint="?android:attr/colorAccent"
                    android:id="@+id/settings_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_settings_ui"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="@dimen/highlight_title_size"
                    android:textColor="@color/top_level_preference_text_color_primary"
                    android:id="@+id/settings_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_ui_title"
                    android:layout_below="@+id/settings_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    style="@style/op_control_text_style_h6" />
                <TextView
                    android:textSize="11.5sp"
                    android:textColor="@color/top_level_preference_text_color_secondary"
                    android:id="@+id/settings_summary"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/highlight_summary_width"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_ui_summary"
                    android:layout_below="@+id/settings_title"
                    android:layout_marginStart="20dp"
                    style="@style/op_control_text_style_h6" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wallpaper_styles_tile"
                android:layout_width="0dp"
                android:layout_height="@dimen/highlight_card_height"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_preference_background_oos"
                android:clickable="true"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:clipToOutline="true">
                    <com.android.settings.utils.DynamicIconPreferenceView
                        android:tint="?android:attr/colorAccent"
                        android:id="@+id/wp_styles_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wallpaper"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:textSize="@dimen/highlight_title_size"
                        android:textColor="@color/top_level_preference_text_color_primary"
                        android:id="@+id/wp_styles_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wallpaper_settings_title"
                        android:layout_below="@+id/wp_styles_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        style="@style/op_control_text_style_h6" />
                    <TextView
                        android:textSize="11.5sp"
                        android:textColor="@color/top_level_preference_text_color_secondary"
                        android:id="@+id/wp_styles_summary"
                        android:layout_marginTop="2dp"
                        android:layout_width="@dimen/highlight_summary_width"
                        android:layout_height="wrap_content"
                        android:text="@string/wallpaper_settings_summary"
                        android:layout_below="@+id/wp_styles_title"
                        android:layout_marginStart="20dp"
                        style="@style/op_control_text_style_h6" />
                </RelativeLayout>
    </LinearLayout>
</LinearLayout>
